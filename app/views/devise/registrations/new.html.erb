


<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
              <h3 class="login-heading my-5 display-4"><span class="list-title px-3">S'inscrire</span></h3>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <%= f.label :first_name, 'Votre prÃ©nom' %>
                <div class="form-label-group">
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>

                <%= f.label :last_name, 'Votre nom' %>
                <div class="form-label-group">
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                </div>

                <%= f.label :email %>
                <div class="form-label-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </div>

                <%= f.label :password, 'Mot de passe' %>
                <div class="form-label-group">
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>

                <%= f.label :password_confirmation, 'Confirmation mot de passe' %>
                <div class="form-label-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>

                <%= f.submit "S'inscrire", class: 'btn btn-lg btn-primary btn-login text-uppercase font-weight-bold mb-2' %>
                <div class="text-center">
                  <a class="small" href="#">Forgot password?</a></div>

                  <% end %>

                  <%= render "devise/shared/links" %>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
